<h2> All In Stock Products </h2>

<ul>
<%  listOfProducts.forEach((oneProduct) => { %>
    <li>
      <h3> <%= oneProduct.name %> </h3>
      <p> $<%= oneProduct.price %> </p>
      <img src="<%= oneProduct.imageUrl %>">
      <p> <%= oneProduct.description %> </p>
      <!-- Link using a query string -->
      <a href="/products/<%= oneProduct._id %>">
        Details
      </a>
      <br>

      <a href="/products/<%= oneProduct._id %>/edit">
        Edit
      </a>
      <br>

      <form action="/products/<%= oneProduct._id %>/delete" method="post">
        <button> Delete </button>
      </form>
    </li>
<%  }) %>
</ul>
